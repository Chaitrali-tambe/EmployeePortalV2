@{
}

@model EmployeePortal.Models.RegisterViewModel


@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<form asp-action="Register" method="post">
    <h1>Register</h1>
    <div class="rounded-1 bg-body-secondary">
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input class="form-control w-50" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="form-label">Email</label>
            <input class="form-control w-50" asp-for="Email" />
        </div>
        <div class="mt-3">
            <label class="form-label">Username</label>
            <input class="form-control w-50" asp-for="UserName" />
        </div>
        <div class="mt-3">
            <label class="form-label">Password</label>
            <input class="form-control w-50" asp-for="Password" />
        </div>
        <div class="mt-3">
            <label class="form-label">Confirm Password</label>
            <input class="form-control w-50" asp-for="ConfirmPassword" />
        </div>
        <div class="mt-3">
            <button class="btn btn-primary" type="submit" style="width:80px">Submit</button>
            <button class="btn btn-danger ms-2" onclick="confirmClear()" style="width:80px">Clear</button>
        </div>
    </div>

</form>
<script>
    function confirmClear() {
        if (confirm("Are you sure you want to clear everything?")) {
            // Find the form and reset it
            document.querySelector("form").reset();
        }
    }
</script>