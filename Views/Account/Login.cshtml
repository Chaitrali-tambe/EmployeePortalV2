@{
}


@model EmployeePortal.Models.LoginViewModel

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach(var error in ViewData.ModelState.Values.SelectMany(v=> v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<form asp-action="Login" method="post">
    <div class="bg-secondary bg-gradient bg-opacity-25 d-flex flex-column align-self-center p-3 rounded-4" style="width: 60%;justify-self:center">
        <h1 class="text-center">Login</h1>
        <div class="rounded-1 bg-body-secondary d-flex flex-column align-items-center">
            <div class="mt-3">
                <label class="form-label">Username</label>
                <input class="form-control" asp-for="UserName" />
            </div>
            <div class="mt-3">
                <label class="form-label">Password</label>
                <input class="form-control" asp-for="Password" />
            </div>
            <div class="mt-3">
                <button class="btn btn-success" type="submit" style="width:80px">Login</button>
            </div>
            <div class="mt-3">
                <p>Don't have Account? <a asp-controller="Account" asp-action="Register">Register</a></p>
                
            </div>
        </div>
    </div>
</form>
