@model EmployeePortal.Models.AddEmployeeViewModel;

<form asp-action="Add" method="post">
    <h1>Add Employee</h1>
    <div class="rounded-1 bg-body-secondary">
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input class="form-control w-50" asp-for="Name" />
        </div>

       @*  <div class="mt-2">
            <label class="form-label">Age</label>
            <input maxlength="3" type="number" class="form-control w-50" asp-for="Age" />
        </div> *@

        <div class="mt-2">
            <label class="form-label">City</label>
            <input class="form-control w-50" asp-for="City" />
        </div>

        <div class="mt-2">
            <label class="form-label">Salary</label>
            <input type="number" maxlength="12" class="form-control w-50" asp-for="salary" />
        </div>

        <div class="mt-2">
            <label class="form-label">DOB</label>
            <input type="date" class="form-control w-50" asp-for="DOB" />
        </div>

        <div class="mt-3 d-flex">
            <button class="btn btn-primary" style="width:80px" onclick="">Submit</button>
            <button class="btn btn-danger ms-2" onclick="confirmClear()" style="width:80px">Clear</button>
        </div>
    </div>

</form>

<script>
    function confirmClear() {
        if (confirm("Are you sure you want to clear everything?")) {
            // Find the form and reset it
            document.querySelector("form").reset();
        }
    }
</script>