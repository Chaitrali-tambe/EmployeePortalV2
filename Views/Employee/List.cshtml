@{
}

@model List<EmployeePortal.Models.Entities.Employee>;

<h1>Employee List</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                NAME
            </th>
            <th>
                AGE
            </th>
            <th>
                CITY
            </th>
            <th>
                SALARY
            </th>
            <th>
                DOB
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model){
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Age</td>
                <td>@employee.City</td>
                <td>@employee.salary</td>
                <td>@employee.DOB</td>
                <td><a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>