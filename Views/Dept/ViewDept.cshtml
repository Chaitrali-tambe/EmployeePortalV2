@{
}

@model IEnumerable<EmployeePortal.Models.Entities.Department>;

<div class="d-flex justify-content-end">
    <a asp-controller="Dept" asp-action="AddDept" class="btn btn-primary">Add Department</a>
</div>

<div>

    @if (Model != null)
    {
        <div class="d-flex flex-column justify-content-center">
            @foreach (var dept in Model)
            {
                <div class="col  mx-lg-3 my-lg-3 my-sm-2 my-2 bg-success bg-gradient bg-opacity-25">
                    <a class="card-link normal-text">
                        <div class="card-body">
                            <h5>@dept.DeptName</h5>
                            <p>Head of Department @dept.DeptHead</p>
                        </div>
                    </a>
                </div>
            }

        </div>
    }

</div>
